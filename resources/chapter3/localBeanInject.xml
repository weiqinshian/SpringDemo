<?xml version="1.0" encoding="UTF-8"?>
<beans
xmlns="http://www.springframework.org/schema/beans"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns:context="http://www.springframework.org/schema/context"
xsi:schemaLocation="
http://www.springframework.org/schema/beans        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
http://www.springframework.org/schema/context                http://www.springframework.org/schema/context/spring-context-3.0.xsd">
<!-- 通过setter方式进行依赖注入 -->  

<bean id="helloApi" class="com.xuetao.spring.example.chapter3.HelloImpl4">
<property name="index" value="1"></property>
<property name="message" value="hello world local"></property>
</bean>
 

<bean id="bean1" class="com.xuetao.spring.example.chapter3.bean.HelloApiDecoratorBean">
<property name="helloApi" ><ref local="helloApi"/> </property>
</bean>

<bean id="bean2" class="com.xuetao.spring.example.chapter3.bean.HelloApiDecoratorBean">
<property name="helloApi" ><ref parent="helloApi"/> </property>
</bean>


 
</beans>